<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tdw.dao.OverDueRecordDAO">

	<resultMap id="BaseResultMap" type="cn.tdw.domain.OverDueRecord">
		<id column="overDueId" jdbcType="INTEGER" property="overDueId" />
		<result column="borrowId" jdbcType="CHAR" property="borrowId" />
		<result column="cost" jdbcType="INTEGER" property="cost" />
		<result column="interest" jdbcType="INTEGER" property="interest" />
		<result column="penaltyAmount" jdbcType="INTEGER" property="penaltyAmount" />
		<result column="overDueInterest" jdbcType="INTEGER" property="overDueInterest" />
		<result column="actualCost" jdbcType="INTEGER" property="actualCost" />
		<result column="actualInterest" jdbcType="INTEGER" property="actualInterest" />
		<result column="isBorrow" jdbcType="BIT" property="isBorrow" />
		<result column="borrowUserId" jdbcType="CHAR" property="borrowUserId" />
		<result column="currentPenaltyHanderDate" jdbcType="TIMESTAMP" property="currentPenaltyHanderDate" />
		<result column="handlerDate" jdbcType="TIMESTAMP" property="handlerDate" />
		<result column="createDate" jdbcType="TIMESTAMP" property="createDate" />
		<result column="lastUpdated" jdbcType="TIMESTAMP" property="lastUpdated" />
	</resultMap>

	<sql id="BaseTableName">
		OverDueRecord
	</sql>

	<select id="list" resultMap="BaseResultMap" parameterType="java.util.Map">
		SELECT overDueId, borrowId, cost, penaltyAmount
		FROM <include refid="BaseTableName" />
		WHERE 1=1
		<if test="borrowIds != null" >
			AND borrowId IN <foreach collection="borrowIds" item="id" open="(" separator="," close=")">#{id}</foreach>
		</if>
	</select>

</mapper>