<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tdw.dao.CollectionRecordDAO">
    <resultMap id="collectionRecodeMap" type="cn.tdw.domain.CollectionRecord">
        <id column="id" property="id"/>
        <result column="borrow_id" property="borrowId"/>
        <result column="is_send" property="isSend"/>
        <result column="send_date" property="sendDate"/>
        <result column="operator_id" property="operatorId"/>
        <result column="operate_type" property="operateType"/>
        <result column="collection_info" property="collectionInfo"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>


    <sql id="collection_record">
		 cr.create_time,cr.collection_info,cr.is_send,cr.operator_id
	</sql>

    <select id="collectRecord"  parameterType="java.lang.String" resultMap="collectionRecodeMap">
        SELECT  <include refid="collection_record"/> FROM
        collection_record as cr INNER JOIN  BorrowInfo b ON cr.borrow_id=b.borrowId WHERE userId=#{userId} order by create_time desc
    </select>

 <insert id="insertCollectRecord" parameterType="cn.tdw.domain.CollectionRecord">
    INSERT INTO collection_record(collection_info,borrow_id) VALUES(#{collectionInfo},#{borrowId})
 </insert>


</mapper>